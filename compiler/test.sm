macro neg { not 1 + }
macro sub { neg + }

// Conditions are true if negative, so less than is just subtraction
macro lt { sub }
macro lte { 1 + sub }

def upcase : ( int -- int ) {
    dup 'a' lt {
        dup 'z' lte {
            32 sub
        } if
    } if
}

def main : ( -- ) {
    'h' upcase send
    'i' upcase send
    '\n' upcase send
}
